#!/bin/bash

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "Error: $PROCESS_NAME is already running."
        exit 1
    fi
    # Start manage_my_process in the background
    ./manage_my_process &
    # Save the PID of the process to /var/run/my_process.pid
    echo $! > "$PID_FILE"
    echo "$PROCESS_NAME started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "Error: $PROCESS_NAME is not running."
        exit 1
    fi
    # Get the PID from the PID file
    PID=$(cat "$PID_FILE")
    # Kill the process using the PID
    kill "$PID"
    # Remove the PID file
    rm "$PID_FILE"
    echo "$PROCESS_NAME stopped"
}

restart() {
    stop
    start
    echo "$PROCESS_NAME restarted"
}

# Check command argument
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

